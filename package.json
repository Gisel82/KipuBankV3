{
  "name": "kipubank-v3",
  "version": "1.0.0",
  "description": "KipuBankV3 with Uniswap V2 mocking and Hardhat tests",
  "scripts": {
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage --temp artifacts",
    "coverage:ci": "npx hardhat coverage --temp artifacts && cat coverage/lcov.info | coveralls",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "deploy": "npx hardhat run scripts/deploy.js --network hardhat"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "coveralls": "^3.1.1",
    "hardhat": "^2.22.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^4.1.1",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "^0.8.16"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "dotenv": "^16.4.5"
  }
}
